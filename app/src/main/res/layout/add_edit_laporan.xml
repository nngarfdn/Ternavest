<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_tambah_laporan">

    <EditText
        android:id="@+id/txtJudulLaporan"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Judul Laporan"
        android:layout_below="@+id/toolbartambahLaporan"
        android:paddingHorizontal="8dp" />

    <EditText
        android:id="@+id/txtDeskripsiLaporan"
        style="@style/EditText.MultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Deskripsi Laporan"
        android:layout_below="@+id/txtJudulLaporan"
        android:paddingHorizontal="8dp" />

    <EditText
        android:id="@+id/txtTanggalLaporan"
        style="@style/EditText"
        android:layout_below="@+id/txtDeskripsiLaporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Tanggal"
        android:paddingHorizontal="8dp" />

    <EditText
        android:id="@+id/txtJenisHewanDetail"
        style="@style/EditText"
        android:layout_below="@+id/txtTanggalLaporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Pemasukan"
        android:paddingHorizontal="8dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtRoiDetail"
        style="@style/EditText"
        android:layout_below="@+id/txtJenisHewanDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:hint="Pengeluaran"
        android:paddingHorizontal="8dp"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imgUploadLaporan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/txtRoiDetail"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/upload" />

    <Button
        android:id="@+id/btnUploadImageLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUploadLaporan"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Pilih gambar" />

    <Button
        android:id="@+id/btnSimpanLaporan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Simpan"
        android:layout_below="@+id/btnUploadImageLaporan"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp" />
</merge>