<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_photo_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_no_profile_pic"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp"
                android:layout_toEndOf="@+id/civ_photo_profile"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_action_profile"/>

            <TextView
                android:id="@+id/tv_action_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_profil"
                android:textColor="@color/green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>